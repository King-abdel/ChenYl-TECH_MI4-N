void adopter_animal() {
    int id;
    printf("ID de l'animal √† adopter : ");
    scanf("%d", &id);

    int trouv√© = 0;
    for (int i = 0; i < nb_animal; i++) {
        if (refuge[i].id == id) {
            trouv√© = 1;
            for (int j = i; j < nb_animal- 1; j++) {
                refuge[j] = refuge[j + 1];
            }
            nb_animal--;
            printf("Animal avec ID %d adopt√© avec succ√®s.\n", id);
            break;
        }
    }

    if (trouv√©==0) {
        printf("Aucun animal trouv√© avec l'ID %d.\n", id);
    }

}

