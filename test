	printf("poids : %f\n", a.poids);
	int b = a.espece;
	switch(a.espece){
        case 1 :
        printf("Espece : chien \n");
        break;
        case 2 :
       printf("Espece : chat \n");
       break;
        case 3 :
        printf("Espece : Hamster \n");
        break;
        case 4 :
        printf("Espece : Autruche \n");
        break;
	}
	
	}

